<div class="container-fluid container-fluid-custom pb-5 mb-5">

  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">Add Note</li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">Add Note</h1>
      </div>
    </div>
  </div>


  <form action="/dashboard/add" method="POST" class="p-5 shadow rounded bg-light">
    <div class="form-group mb-4 position-relative">
      <input type="text" class="form-control fw-bold border-0 fs-4 p-3 shadow-sm" id="title" name="title" placeholder="Title" required style="background-color: #E8F9F9; border-radius: 10px;">
    </div>

    <div class="form-group mb-4">
      <textarea required class="form-control fs-4 p-3 shadow-sm" id="body" name="body" placeholder="Take a note..." style="background-color: #E8F9F9; border-radius: 10px;" rows="12"></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">+ Add Note</button>
    </div>
  </form>

</div>